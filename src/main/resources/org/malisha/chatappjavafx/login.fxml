<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.malisha.chatappjavafx.LoginController" style="-fx-background-color: #00b5ff">

    <Label text="Welcome to ChatApp!" style="-fx-font-size: 35px; -fx-text-fill: white; -fx-font-weight: bold"/>
    <VBox alignment="CENTER">
        <padding>
            <Insets top="45"/>
        </padding>
        <Label text="Please enter your username:" style="-fx-text-fill: white; -fx-font-size: 20px">
            <padding>
                <Insets bottom="20"/>
            </padding>
        </Label>
        <VBox alignment="CENTER" spacing="10">
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="usernameField" alignment="CENTER" maxWidth="300" promptText="Username"
                           style="-fx-font-size: 20; -fx-background-radius: 20;"/>
                <Button text="Go" fx:id="goButton" onAction="#enterChat" prefHeight="40" prefWidth="40"/>
            </HBox>
            <Label fx:id="validityShow" alignment="BOTTOM_LEFT" style="-fx-text-fill: white"/>
        </VBox>
    </VBox>
</VBox>