<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.malisha.chatappjavafx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="40.0" top="20.0"/>
  </padding>
  <BorderPane>
    <top>
      <VBox alignment="CENTER">
        <Label fx:id="welcomeText" style="-fx-font-size: 18px; -fx-font-weight: bold;">Group Chat</Label>
      </VBox>
    </top>
    <left>
      <VBox spacing="10">
        <ListView fx:id="userListView" prefHeight="200" prefWidth="150" onMouseClicked="#onUserClicked"/>
        <Button fx:id="groupChatButton" onAction="#onGroupChatButtonClick" text="Group Chat" />
      </VBox>
    </left>
    <right>
      <VBox>
      <ScrollPane fx:id="mainScrollPane" prefHeight="300" minHeight="200" fitToWidth="true">
        <content>
          <VBox fx:id="messagesBox" prefHeight="200" prefWidth="250"/>
        </content>
      </ScrollPane>
        <HBox alignment="CENTER_RIGHT">
          <TextField fx:id="typedMessage" maxWidth="200" promptText="Enter Message"/>
          <Button text="Send" onAction="#onHelloButtonClick"/>
        </HBox>
      </VBox>
    </right>
  </BorderPane>
</VBox>
