<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.malisha.chatappjavafx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="40.0" top="20.0"/>
  </padding>
  <BorderPane>
    <top>
      <VBox alignment="CENTER">
        <Label fx:id="welcomeText" style="-fx-font-size: 18px; -fx-font-weight: bold;">Group Chat</Label>
      </VBox>

    </top>

    <right>
      <VBox>
      <ScrollPane prefHeight="300" minHeight="200">
        <content>
          <VBox>
            <TextArea>fjfjfj</TextArea>
          </VBox>
        </content>
      </ScrollPane>
        <HBox alignment="CENTER_RIGHT">
          <TextField maxWidth="200" >Enter message</TextField>
          <Button text="Send" onAction="#onHelloButtonClick"/>
        </HBox>
      </VBox>
    </right>
  </BorderPane>
</VBox>
